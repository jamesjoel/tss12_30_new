<%- include("../../includes/header") %>
<div class="container" style="min-height: 700px;">
    <div class="row">
        <div class="col-md-6 offset-md-3 mt-4">
            <h3>Update Employee</h3>
            <form  method="post">
                <div class="form-group">
                    <label>Full Name</label>
                    <input type="text" value="<%= result.fullname %>"  class="form-control" name="fullname"/>
                </div>
                <div class="form-group">
                    <label>Salary</label>
                    <input type="text" value="<%= result.salary %>" class="form-control" name="salary"/>
                </div>
                <div class="form-group">
                    <label>City</label>
                    <select class="form-control" name="city">
                        <option>Select</option>
                        <option <% if(result.city=='Indore'){ %> selected  <% } %>>Indore</option>
                        <option  <% if(result.city=='Mumbai'){ %> selected  <% } %>>Mumbai</option>
                        <option <% if(result.city=='Pune'){ %> selected  <% } %>>Pune</option>
                    </select>
                </div>
                <br />
                <br />
                <input type="submit" value="Update" class="btn btn-success" />
            </form>
        </div>
    </div>
</div>