<%- include("../../includes/header") %>
</div>
<div class="container mt-4" style="min-height: 700px;">
    <h3>List of All Teacher</h3>
    <div class="row">
        <div class="col-md-12">
            <table class="table table-hover table-bordered table-striped table-dark">
                <tr>
                    <th>S.No.</th>
                    <th>Name</th>
                    <th>Education</th>
                    <th>Salary</th>
                    <th>More Info</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
                <% result.forEach((x, n)=>{ %>
                    <tr>
                        <td><%= n+1 %></td>
                        <td><%= x.fullname %></td>
                        <td><%= x.education %></td>
                        <td><%= x.salary %></td>
                        <td><a href="/teacher/moreinfo/<%= x._id %>" class="btn btn-sm btn-info"><i class="fa fa-sign-in" aria-hidden="true"></i></a></td>
                        <td><a href="#" class="btn btn-sm btn-warning"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a></td>
                        <td><a href="#" class="btn btn-sm btn-danger"><i class="fa fa-trash-o" aria-hidden="true"></i></a></td>
                    </tr>
                <% }) %>
            </table>
        </div>
    </div>
</div>
<%- include("../../includes/footer") %>